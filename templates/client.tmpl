{{define "content"}}
<h2>User/Client {{.user}}/{{.client}}</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Id</th>
        <th>Network</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      {{range .games}}
      <tr>
        <td><a href="/game/{{.id}}">{{.id}}</a></td>
        <td>{{.network}}</td>
        <td>{{.created_at}}</td>
      </tr>
      {{end}}
    </tbody>
  </table>
</div>
{{end}}

{{define "scripts"}}
{{end}}
